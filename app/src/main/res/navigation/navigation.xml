<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sheeptracker.ui.main.MainFragment"
        android:label="Map"
        tools:layout="@layout/main_fragment"/>
    <fragment
        android:id="@+id/mapAreasFragment"
        android:name="com.example.sheeptracker.ui.mapareas.MapAreasFragment"
        android:label="@string/map_areas"
        tools:layout="@layout/map_areas_fragment">
        <action
            android:id="@+id/action_mapAreasFragment_to_mapAreaFragment"
            app:destination="@id/mapAreaFragment" />
        <action
            android:id="@+id/action_mapAreasFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripFragment"
        android:name="com.example.sheeptracker.ui.trip.TripFragment"
        android:label="Trip"
        tools:layout="@layout/trip_fragment">
        <argument
            android:name="tripId"
            app:argType="long" />
        <argument
            android:name="mapAreaId"
            app:argType="long" />
        <action
            android:id="@+id/action_tripFragment_to_addObservationFragment"
            app:destination="@id/addObservationFragment" />
        <action
            android:id="@+id/action_tripFragment_to_observationsFragment"
            app:destination="@id/observationsFragment" />
        <action
            android:id="@+id/action_tripFragment_to_addDeadAnimalFragment"
            app:destination="@id/addDeadAnimalFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.sheeptracker.ui.start.StartFragment"
        android:label="@string/app_name"
        tools:layout="@layout/start_fragment">
        <action
            android:id="@+id/action_startFragment_to_mapAreasFragment"
            app:destination="@id/mapAreasFragment" />
        <action
            android:id="@+id/action_startFragment_to_tripsFragment"
            app:destination="@id/tripsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripsFragment"
        android:name="com.example.sheeptracker.ui.trips.TripsFragment"
        android:label="@string/my_trips"
        tools:layout="@layout/trips_fragment" >
        <action
            android:id="@+id/action_tripsFragment_to_addTripFragment"
            app:destination="@id/addTripFragment" />
        <action
            android:id="@+id/action_tripsFragment_to_tripFragment"
            app:destination="@id/tripFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTripFragment"
        android:name="com.example.sheeptracker.ui.addtrip.AddTripFragment"
        android:label="New Trip"
        tools:layout="@layout/add_trip_fragment"/>
    <fragment
        android:id="@+id/mapAreaFragment"
        android:name="com.example.sheeptracker.ui.maparea.MapAreaFragment"
        android:label="Map Area"
        tools:layout="@layout/map_area_fragment">
        <argument
            android:name="mapAreaId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/addObservationFragment"
        android:name="com.example.sheeptracker.ui.addobservation.AddObservationFragment"
        android:label="Register Observation"
        tools:layout="@layout/add_observation_fragment">
        <argument
            android:name="tripId"
            app:argType="long" />
        <argument
            android:name="obsLat"
            app:argType="string" />
        <argument
            android:name="obsLon"
            app:argType="string" />
        <action
            android:id="@+id/action_addObservationFragment_to_swiperFragment"
            app:destination="@id/swiperFragment" />
    </fragment>
    <fragment
        android:id="@+id/observationsFragment"
        android:name="com.example.sheeptracker.ui.observations.ObservationsFragment"
        android:label="Observations"
        tools:layout="@layout/observations_fragment">
        <argument
            android:name="tripId"
            app:argType="long" />
        <action
            android:id="@+id/action_observationsFragment_to_observationDetailsFragment"
            app:destination="@id/observationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/observationDetailsFragment"
        android:name="com.example.sheeptracker.ui.observationdetails.ObservationDetailsFragment"
        android:label="Observation Details"
        tools:layout="@layout/observation_details_fragment">
        <argument
            android:name="observationId"
            app:argType="long" />
        <action
            android:id="@+id/action_observationDetailsFragment_to_swiperFragment"
            app:destination="@id/swiperFragment" />
        <action
            android:id="@+id/action_observationDetailsFragment_to_imageResourceFragment"
            app:destination="@id/imageResourceFragment" />
    </fragment>
    <fragment
        android:id="@+id/swiperFragment"
        android:name="com.example.sheeptracker.ui.swiper.SwiperFragment"
        android:label="SwiperFragment"
        tools:layout="@layout/swiper_fragment"/>
    <fragment
        android:id="@+id/addDeadAnimalFragment"
        android:name="com.example.sheeptracker.ui.addanimalregistration.AddAnimalRegistrationFragment"
        android:label="Register Animal Info"
        tools:layout="@layout/add_animal_registration_fragment">
        <argument
            android:name="tripId"
            app:argType="long" />
        <argument
            android:name="obsLat"
            app:argType="string" />
        <argument
            android:name="obsLon"
            app:argType="string" />
        <argument
            android:name="obsType"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/imageResourceFragment"
        android:name="com.example.sheeptracker.ui.imageresource.ImageResourceFragment"
        android:label="ImageResourceFragment"
        tools:layout="@layout/image_resource_fragment">
        <argument
            android:name="imageResourceId"
            app:argType="long" />
        <argument
            android:name="imageUri"
            app:argType="string" />
    </fragment>

</navigation>